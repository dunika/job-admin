{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "plugins": ["react", "babel", "jsx-a11y", "import"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/jsx-filename-extension": "off",
    "jsx-a11y/href-no-hash": "off"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": [ "node_modules", "src"]
          }
        }
      }
    }
  }
}